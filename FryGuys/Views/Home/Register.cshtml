
@{
    ViewBag.Title = "Register";
}

<h2 class="row img-rounded text-center" style="background-color:rgba(220, 220, 220, 0.90)">@ViewBag.Title</h2>

<div class="container-fluid img-rounded" style="background-color:rgba(150, 150, 150, 0.90)">
<form action="/Home/RegisterConfirm/" id="registerForm" method="post" class="form-horizontal" onsubmit="validateFirstName()">
    <div class="col-md-6">
        <br>
        <div class="form-group">
            <label id="firstName" for="firstName" class="mr-sm-2">First name:</label>
        <input type="text" name="firstName" class="form-control mb-2 mr-sm-2" required /></div> <br>

        <div class="form-group">
            <label for="lastName" class="mr-sm-2">Last name:</label>
        <input type="text" name="lastName" class="form-control mb-2 mr-sm-2" required /></div> <br>

        <div class="form-group">
            <label for="age" class="mr-sm-2">Age:</label>
        <input type="number" name="age" min="21" class="form-control mb-2 mr-sm-2" required /></div> <br>

        <div class="form-group">
            Birthday:
        <input type="date" name="birthday" class="form-control mb-2 mr-sm-2"/></div> <br>
        
        <div class="form-group">
            Phone number:
            <input type="tel" name="phone" class="form-control mb-2 mr-sm-2"/>
        </div> <br>

        <div class="form-group">
            <fieldset style="background-color:rgba(150, 150, 150, 0.95)">
                <legend class="h5">Gender:</legend>
                <input type="radio" name="gender" value="male"> Male
                <input type="radio" name="gender" value="female"> Female
                <input type="radio" name="gender" value="other"> Other
                <input type="radio" name="gender" value="prefer not to answer" checked> Prefer not to answer
            </fieldset>
        </div>
        <br>
    </div>
    <div class="col-md-6">
        <br>
        <div class="form-group">
            <label for="username" class="mr-sm-2">Username:</label>
        <input type="text" name="userName" class="form-control mb-2 mr-sm-2" required /> </div> <br>

        <fieldset>
            
            <div class="form-group">
                <label for="email" class="mr-sm-2">Email:</label>
            <input type="email" name="email" class="form-control mb-2 mr-sm-2" required /> </div>

            <div class="form-group">
                <input type="checkbox" checked/> I would like to receive emails and promotional offers from Fry Guys
            </div> <br>
        </fieldset>

        <fieldset>
            <div class="form-group">
                <label for="password" class="mr-sm-2">Password:</label>
            <input type="password" name="password" class="form-control mb-2 mr-sm-2" required /> </div> <br>

            <div class="form-group">
                <label for="password confirm" class="mr-sm-2">Confirm password:</label>
            <input type="password" name="passwordConfirm" class="form-control mb-2 mr-sm-2" required /> </div> <br>
        </fieldset>
    </div>
    <p>(fields in bold are required)</p>
    <input type="submit" value="Sign up"/>
    <input type="reset" />
    <p class="text-danger">@ViewBag.ErrorMessage</p>
</form>
<p id="tester">test</p>
</div>
<script type="text/javascript" src="~/JavaScript.js"></script>

