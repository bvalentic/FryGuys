
@{
    ViewBag.Title = "Register";
}

<h2 class="row img-rounded text-center" style="background-color:rgba(220, 220, 220, 0.90)">@ViewBag.Title</h2>

<div class="container-fluid img-rounded" style="background-color:rgba(150, 150, 150, 0.95)">
<form action="/Home/RegisterConfirm/" id="registerForm" method="post" class="form-horizontal" onsubmit="return validateForm()">
    <div class="col-md-6">
        <br>
        <div class="form-group">
            <label for="firstName" class="mr-sm-2">First name:</label>
            <input type="text" name="firstName" id="firstName" class="form-control mb-2 mr-sm-2" required />
            <div class="text-danger hidden" id="firstNameError" >First name entry invalid.</div>
        </div> <br>

        <div class="form-group">
            <label for="lastName" class="mr-sm-2">Last name:</label>
            <input type="text" name="lastName" id="lastName" class="form-control mb-2 mr-sm-2" required />
            <div class="text-danger hidden" id="lastNameError">Last name entry invalid.</div>
        </div> <br>

        <div class="form-group">
            <label for="age" class="mr-sm-2">Age:</label>
        <input type="number" name="age" id="age" min="21" class="form-control mb-2 mr-sm-2" pattern="[\d]{2}" required /></div> <br>

        <div class="form-group">
            Birthday:
        <input type="date" name="birthday" id="birthday" class="form-control mb-2 mr-sm-2"/></div> <br>
        
        <div class="form-group">
            Phone number:
            <input type="tel" name="phone" id="phone" class="form-control mb-2 mr-sm-2" placeholder="xxx-xxx-xxxx"/>
            <div class="text-danger hidden" id="phoneError">Please enter phone number in xxx-xxx-xxxx format.</div>
        </div> <br>

        <div class="form-group">
            <fieldset>
                <legend class="h5">Gender:</legend>
                <input type="radio" name="gender" value="Male"> Male
                <input type="radio" name="gender" value="Female"> Female
                <input type="radio" name="gender" value="Other"> Other
                <input type="radio" name="gender" value="Prefer not to answer" checked> Prefer not to answer
            </fieldset>
        </div>
        <br>
    </div>
    <div class="col-md-6">
        <br>
        <div class="form-group">
            <label for="username" class="mr-sm-2">Username:</label>
        <input type="text" name="userName" id="userName" class="form-control mb-2 mr-sm-2" required /> </div> <br>

        <fieldset>
            
            <div class="form-group">
                <label for="email" class="mr-sm-2">Email:</label>
                <input type="email" name="email" id="email" class="form-control mb-2 mr-sm-2" required /> 
                <div class="text-danger hidden" id="emailError">Email address entry invalid.</div>
            </div>

            <div class="form-group">
                <input type="checkbox" checked/> I would like to receive emails and promotional offers from Fry Guys
            </div> <br>
        </fieldset>

        <fieldset>
            <div class="form-group">
                <label for="password" class="mr-sm-2">Password:</label>
                <input type="password" name="password" id="password" class="form-control mb-2 mr-sm-2" required />
                <p>
                    Password must be 8 characters,
                    contain an upper- and lower-case letter, and at least one number
                </p>
                <div class="text-danger hidden" id="passwordError">Password does not follow proper format.</div>
                <div class="text-danger hidden" id="passwordLengthError">Password less than 8 characters.</div>
                
            </div> <br>

            <div class="form-group">
                <label for="password confirm" class="mr-sm-2">Confirm password:</label>
                <input type="password" name="passwordConfirm" id="passwordConfirm" class="form-control mb-2 mr-sm-2" required /> 
                <div class="text-danger hidden" id="passwordMatchError">Passwords do not match.</div>
            </div> <br>
        </fieldset>
    </div>
    <p>(fields in bold are required)</p>
    <input type="submit" value="Sign up"/>
    <input type="reset" />
    <p class="text-danger">@ViewBag.ErrorMessage</p>
</form>
</div>
<script type="text/javascript" src="~/JavaScript.js"></script>

