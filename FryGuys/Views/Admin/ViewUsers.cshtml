@{
    ViewBag.Title = "View Users";
}
<div class="container-fluid img-rounded" style="background-color:rgba(150, 150, 150, 0.95)">
    <h2>View Users</h2>

    <table class="table">
        <thead>
            Users
            <tr>
                <th>User ID:</th>
                <th>First Name:</th>
                <th>Last Name:</th>
                <th>Age:</th>
                <th>Birthday:</th>
                <th>Phone:</th>
                <th>Gender:</th>
                <th>Username:</th>
                <th>Email:</th>
                <th>Get Email?</th>
                <th>Password:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in ViewBag.UserList)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Age</td>
                    <td>@user.Birthday</td>
                    <td>@user.Phone</td>
                    <td>@user.Gender</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.GetEmail</td>
                    <td>@user.Password</td>
                    <td><a href="~/Admin/EditUser?UserID=@user.UserID" class="btn-default">Edit user info</a></td>
                    <td><a href="~/Admin/DeleteUser?UserID=@user.UserID" class="btn-danger">Delete user</a></td>
                </tr>
            }
            <tr>
                <td><a href="~/Admin/AddUser" class="btn-primary">Add user</a></td>
            </tr>
        </tbody>
    </table>
</div>